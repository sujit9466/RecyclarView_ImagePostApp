<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtAccountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bitCodeTech"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPostedOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-12-2022"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgPost"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:src="@drawable/image3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAccountName" />


    <ImageView
        android:id="@+id/imgLike"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgPost"
        android:src="@drawable/heart4"/>

    <TextView
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="@id/imgLike"
        app:layout_constraintBottom_toBottomOf="@id/imgLike"
        app:layout_constraintLeft_toRightOf="@id/imgLike"
        android:id="@+id/txtLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView

        app:layout_constraintTop_toBottomOf="@id/imgLike"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/txtText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@id/txtText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>